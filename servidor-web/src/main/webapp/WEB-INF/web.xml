        <servlet-name>ConsultaUsuario</servlet-name>
        <url-pattern>/consultausuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ModificacionUsuario</servlet-name>
        <url-pattern>/modificacionusuario</url-pattern>
    </servlet-mapping>
