    </servlet>
    <servlet>
        <servlet-name>CompraPaquete</servlet-name>
        <servlet-class>controllers.paquetes.CompraPaquete</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AltaSalida</servlet-name>
        <url-pattern>/altasalida</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Consulta</servlet-name>
        <url-pattern>/consultasalida</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Inscripcion</servlet-name>
        <url-pattern>/inscripcion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PdfInscripcion</servlet-name>
        <url-pattern>/pdfInscripcion</url-pattern>
